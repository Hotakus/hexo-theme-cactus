#footer
  position: relative
  bottom: 0
  margin-top: 20px
  margin-bottom: 10px
  margin-right: 0px
  margin-left: 0px
  color: $color-meta
  vertical-align: middle
  text-align: center
  font-size: 12px
  min-width: 95%

  ul
    margin: 0
    padding: 0
    list-style: none

  li
    display: inline-block
    margin-right: 15px
    border-right: 1px solid
    border-color: $color-border
    vertical-align: middle

    a
      margin-right: 15px

  li:last-child
    margin-right: 0
    border-right: 0

    a
      margin-right: 0

  a
    color: $color-meta
    text-decoration: underline
    background-image: none

  a:hover
    color: lighten($color-meta, 20%)

//   .footer-left
//     height: 20px
//     vertical-align: middle
//     line-height: 20px

  .footer-left
    align-self: flex-start
    //margin-right: 20px
    vertical-align: middle

  .footer-right
    vertical-align: middle
    //argin-left: 20px
    align-self: flex-end
    // box-align: end

@media (min-width: 39rem)
  #footer
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    align-items: center
    align-content: center
    margin-bottom: 20px

    .footer-left
      align-self: flex-start
      margin-right: 20px

    .footer-right
      align-self: flex-end
